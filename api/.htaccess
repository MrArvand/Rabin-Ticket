RewriteEngine On

# Exclude documentation and static files from API routing
RewriteCond %{REQUEST_URI} !^/api/docs\.html$
RewriteCond %{REQUEST_URI} !^/api/swagger\.json$
RewriteCond %{REQUEST_URI} !^/api/.*\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$

# Route API requests to v1/index.php
RewriteRule ^(.*)$ v1/index.php [QSA,L]
